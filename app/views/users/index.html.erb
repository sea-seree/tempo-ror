<div class="show-users">
  <section>
    <header>Users List</header>
    <div class="users-list">
      <% @users.each do |user| %>
        <div class="user-card">
          <div class="user-info">
            <strong>First Name:</strong> <%= user.first_name %><br>
            <strong>Last Name:</strong> <%= user.last_name %><br>
            <strong>Email:</strong> <%= user.email %>
          </div>
          <div class="user-actions">
            <%= link_to 'View', user, class: 'btn-view' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn-edit' %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-delete' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="button-submit">
      <%= link_to "Create new account", new_user_path, class: 'btn-submit' %>
    </div>
  </section>
</div>
